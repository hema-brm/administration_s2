{% extends '@base/app.html.twig' %}
{% from "@components/macros/content.html.twig" import header %}

{% block title %}Devis{% endblock %}

{% block body %}
    {{ displayFlash() }}
    {{ header({
        text: 'Devis',
    }) }}

    <div class= "flex flex-row items-center justify-between mb-4 m-4 text-xs text-secondary-500 hover:text-primary-500 ease-in-out">
        <div>
            <i class="fa-solid fa-arrow-left mr-1"></i>
            <a href="{{ path('app_quote_index') }}">Retour Ã  la liste</a>
        </div>
        <div>
            <twig:Button
                text="PDF"
                color="secondary"
                route="{{ path('app_quote_pdf_show', {'id': quote.id}) }}"
                icon="fa-file-pdf"
                variant="secondary"
            />
            <twig:Button
                text="Transformer en facture"
                color="secondary"
                route="{{ path('app_quote_to_bill', {'id': quote.id}) }}"
                icon="fa-random"
                variant="secondary"
            />
            <twig:Button
                text="Modifier"
                color="warning"
                textColor="secondary-700"
                route="{{ path('app_quote_edit', {'id': quote.id}) }}"
                icon="fa-pen"
            />
        </div>
    </div>
    <div class="px-4">
        <twig:Quote:Creator :quoteData="quote" mode="show" />
    </div>


{% endblock %}