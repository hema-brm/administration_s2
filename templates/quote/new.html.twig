    {{ header({
        text: 'Créer un devis',
    }) }}
    <div class= "flex flex-row items-center justify-start mb-4 m-4 text-xs text-secondary-500 hover:text-primary-500 ease-in-out">
            <i class="fa-solid fa-arrow-left mr-1"></i>
            <a href="{{ path('app_quote_index') }}">Retour à la liste</a>
