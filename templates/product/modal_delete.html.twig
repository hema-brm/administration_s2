{% from "@components/macros/content.html.twig" import button_macro %}

{% block body %}

<!-- Modal de confirmation -->
<div id="modal_delete" class="hidden fixed inset-0 z-50 overflow-auto bg-secondary-700 bg-opacity-50 flex items-center justify-center">
    <div class="bg-white p-5 text-center text-secondary-900 relative shadow-2xl rounded-sm transition-all transform">
        <div class="p-2  text-sm text-center text-secondary-900">
            <h3 class="text-lg font-bold mb-2">Confirmation</h3>
            <p>Êtes-vous sûrs de vouloir supprimer ce(s) produit(s) ?</p>
        </div>
        <div class="flex flex-row justify-center">
            {{ button_macro({
                id: 'cancel_delete',
                custom_classes: ["bg-secondary-500",
                                "hover:bg-secondary-600",
                                "text-white",
                                "mr-1",
                                "py-1",
                                "px-2"],
                text: "Annuler",
            }) }}

            {{ button_macro({
                id: 'confirm_delete',
                custom_classes: ["bg-danger-50",
                                "hover:bg-danger-500",
                                "text-danger-500", 
                                "hover:text-white", 
                                "py-1", 
                                "px-2"],
                text: "Supprimer",
                action:  path('app_product_deleteAll') 
            }) }}
        </div>
    </div>
</div>


{% endblock %}