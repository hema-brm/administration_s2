{% extends '@base/app.html.twig' %}
{% from "@components/macros/content.html.twig" import header %}

{% block title %}Produit{% endblock %}

{% block body %}
    {{ header({
        text: 'Informations sur le produit',
    }) }}

    <div class="p-4">
        <div class= "flex flex-row items-center justify-start mb-4 text-xs text-gray-500 hover:text-primary-500 ease-in-out">
            <i class="fa-solid fa-arrow-left mr-1"></i>
            <a href="{{ path('app_product_index') }}">Retour à la liste</a>
        </div>
        
        <div class="w-full md:w-1/2 shadow">
            <div class="px-4 py-2 bg-gray-50 flex justify-between items-center">
                <span>{{ product.name }}</span>
                
                {% if isGTCompany %}
                <div class="flex items-center">
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">
                        <button class="group">
                            <i class="fa-solid fa-edit ml-2 group-hover:text-warning-500"></i>
                        </button>
                    </a>
                </div>
                {% endif %}
            </div>
            <div class="text-sm leading-10 p-4">
                <table>
                    <tbody>
                        <tr>
                            <th class="align-top text-left w-1/4">Référence :</th>
                            {% if product.description is empty %}
                                <td class="leading-5 italic text-gray-300 ">null</td>
                            {% else %}
                                <td class="leading-5">{{ product.reference }}</td>
                            {% endif %}
                        </tr>
                        <tr>
                            <th class="text-left align-top w-1/4">Description :</th> 
                                {% if product.description is empty %}
                                <td class="leading-5 italic text-gray-300">null</td>
                                {% else %}
                                <td class="leading-5 ">{{ product.description }}</td>
                                {% endif %}

                        </tr>
                        <tr>
                            <th class="align-top text-left w-1/4">Prix :</th>
                            <td>{{ product.price }} €</td>
                        </tr>
                        <tr>
                            <th class="align-top text-left w-1/4">Catégorie :</th>
                            <td>{{ product.category }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}