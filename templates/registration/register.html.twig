{% extends '@base/public.html.twig' %}

{% block title %}EasyVows{% endblock %}

{% set width = '3/4' %}

{% block form %}
    <div class="w-full p-5">
        <h1 class="text-4xl font-bold text-center mb-5">
            EasyVows
        </h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.phoneNumber) }}
        {{ form_row(registrationForm.company) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.siretNumber) }}

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password) }}

        <div class="flex justify-center mt-2 w-full">
            <button class="bg-indigo-700 w-1/2 hover:bg-indigo-800 text-white font-bold py-2 px-4 rounded"
                    type="submit">
                S'inscrire
            </button>
        </div>

        <div class="text-center mt-2">
            <p class="text-secondary-500 text-sm">Vous avez déjà un compte ?</p>
            <a href="{{ path('app_login') }}"
               class="text-primary-500 text-sm hover:text-primary-700 font-semibold">
                <i class="fas fa-arrow-left mr-1"></i>
                <span>Connectez-vous</span>
            </a>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock form %}
