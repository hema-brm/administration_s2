{% from "@components/macros/content.html.twig" import header %}

{% extends 'front/base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    {{ header({
        text: 'Détail du client',
    }) }}

    <div class="p-4">
        <div class= "flex flex-row items-center justify-start mb-4 text-xs text-gray-500 hover:text-blue-500 ease-in-out">
            <i class="fa-solid fa-arrow-left mr-1"></i>
            <a href="{{ path('app_customer_index') }}">Retour à la liste</a>
        </div>

        <article class="w-full shadow-sm md:shadow lg:w-3/4 xl:w-1/2 relative">
            <div class="absolute top-0 right-0 p-2 flex flex-row-reverse items-baseline text-sm text-gray-400">
                <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">
                    <button class="group">
                        <i class="fa-solid fa-edit ml-2 group-hover:text-yellow-500"></i>
                    </button>
                </a>
                <div>
                    {% embed "customer/_delete_form.html.twig" with {
                        customer: customer,
                        hidden: true,
                    } %}
                        {% block button_content %}
                            <i class="fa-regular fa-trash-can group-hover:text-red-500"></i>
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
            <div class="flex flex-row p-4 items-start">
                <div class="mr-4">
                    <img class="w-24 aspect-square rounded-md" src="{{ asset('build/images/default/profile.png') }}" alt="">
                </div>
                <div class="flex flex-col">
                    <div class="text-lg">
                        <span>{{ customer.firstname }}</span>
                        <span>{{ customer.lastname }}</span>
                    </div>
                    <div class="leading-5 text-xs text-gray-500">
                        <span>{{ "<" ~ customer.email ~ ">" }}</span>
                    </div>
                    <div class="leading-5 text-xs">
                        <span>{{ customer.phone }}</span>
                    </div>
                    <div class="leading-5 text-xs">
                        <span>{{ customer.address }}</span>
                    </div>
                </div>
            </div>
        </article>
    </div>
{% endblock %}
