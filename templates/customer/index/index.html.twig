{% from "@components/macros/content.html.twig" import header %}
{% from "@components/macros/content.html.twig" import alert %}
{% from "@components/macros/content.html.twig" import paginator %}
{% from "@components/macros/table.html.twig" import default as table %}
{% from "@components/input/macros/index.html.twig" import form_search_macro %}

{% extends 'front/base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    {{ header({
        text: 'Liste des clients',
    }) }}

    <div class="px-4">
        <div class="flex flex-row justify-between py-2">
            {{ form_search_macro({
                id: 'form-search-customer',
                action: path('app_customer_index'),
                placeholder: 'Rechercher',
                name: constant('App\\Controller\\Customer\\IndexController::SEARCH_FORM_NAME'),
                value: searchTerm|default(''),
            }) }}
            <a href="{{ path('app_customer_new') }}">
                <button class="group rounded p-2 bg-blue-50 text-blue-500 text-sm transition-all ease-in-out hover:bg-blue-500 hover:text-white">
                    <i class="fa-solid fa-plus"></i>
                    <span>Nouveau client</span>
                </button>
            </a>
        </div>

        {% set cellPadding = 'p-4 px-2' %}
        {% set borderClass = 'border-b border-b-gray-200' %}
        <table class="w-full border shadow-sm">
            <thead>
                <tr class="{{ borderClass }}">
                    <th class="{{ cellPadding }} text-right">#</th>
                    <th class="{{ cellPadding }} text-left">Email</th>
                    <th class="{{ cellPadding }} text-left">Prénom</th>
                    <th class="{{ cellPadding }} text-left">Nom</th>
                    <th class="{{ cellPadding }} text-left">Adresse</th>
                    <th class="{{ cellPadding }} text-left">Téléphone</th>
                    <th class="{{ cellPadding }}"></th>
                </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr data-href="{{ path('app_customer_show', {'id': customer.id}) }}" class="{{ borderClass }} hover:bg-gray-50 text-sm">
                    <td class="{{ cellPadding }} text-right">{{ loop.index }}</td>
                    <td class="{{ cellPadding }} text-left">{{ customer.email }}</td>
                    <td class="{{ cellPadding }} text-left">{{ customer.lastname }}</td>
                    <td class="{{ cellPadding }} text-left">{{ customer.firstname }}</td>
                    <td class="{{ cellPadding }} text-left">{{ customer.address }}</td>
                    <td class="{{ cellPadding }} text-left">{{ customer.phone }}</td>
                    <td class="{{ cellPadding }} text-right text-gray-400">
                        <div class="flex flex-row justify-end">
                            <div class="mr-2">
                                {% embed "@customer/index/_delete_form.html.twig" with {
                                    customer: customer,
                                    hidden: true,
                                } %}
                                    {% block button_content %}
                                        <i class="fa-regular fa-trash-can group-hover:text-red-500"></i>
                                    {% endblock %}
                                {% endembed %}
                            </div>
                            <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">
                                <i class="fa-solid fa-edit hover:text-yellow-500"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">
                        {{ alert({
                            text: 'Aucun client enregistré',
                            color: 'warning',
                            icon: 'fa-circle-info',
                            variant: 'small',
                        }) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div id="customer-paginator" class="flex flex-row justify-end my-2">
            {{ paginator({
                name: 'page',
                countButton: 5,
                current: paginatorHelper.current,
                total: paginatorHelper.total,
                route: 'app_customer_index',
                urlParams: { 
                    (constant('App\\Controller\\Customer\\IndexController::SEARCH_FORM_NAME')): searchTerm|default('') 
                },
            }) }}
        </div>
    </div>

    <script>
        window.addEventListener('load', () => {
            (new Link('tr[data-href]'));
        });
    </script>
{% endblock %}
