{% extends 'base.html.twig' %}

{% block title %}Available input components
{% endblock %}

{% block body %}

	{% embed "@guidelines/card/default.html.twig" with {
        shadow: true,
    } %}
		{% block header %}
			<h3>Testing form components</h3>
		{% endblock %}
		{% block body %}
			{% include "@guidelines/input/text/input-text.html.twig" with {
                'label': 'Default',
                'full': false,
                'help': 'Help message',
            } %}
			{% include "@guidelines/input/text/input-text.html.twig" with {
                'label': 'Full',
                'full': true,
                'help': 'Help message',
                'error': 'This is a long error message'
            } %}
			{% include "@guidelines/input/text/input-text.html.twig" with {
                'label': 'Another label',
                'full': true,
                'help': 'Help message',
            } %}
			{% include "@guidelines/input/text/input-text.html.twig" with {
                'label': 'Another one without message',
                'full': true,
            } %}
			{% include "@guidelines/input/text/input-text.html.twig" with {
                'label': 'Full error input',
                'full': true,
                'error': 'This is a long error message'
            } %}
		{% endblock %}
	{% endembed %}


{% endblock %}
