{% extends 'front/base.html.twig' %}

{% block title %}Available components{% endblock %}

{% block body %}
<div class="p-5">
    <div class="border border-secondary-400">
        {% embed "@components/container/base.html.twig" with {
            classes: "border bg-secondary-100 p-5 mb-5",
        } %}
            {% block content %}
                <p>I am the <b>default</b> container !</p>
            {% endblock %}
        {% endembed %}

        {% embed "@components/container/base.html.twig" with {
            classes: "border bg-secondary-100 p-5",
            centered: true,
        }  %}
            {% block content %}
                <p>I am the <b>centered</b> container !</p>
            {% endblock %}
        {% endembed %}

        {% embed "@components/container/base.html.twig" with {
            classes: "border bg-secondary-100 p-5 mb-5",
            centered: true,
        }  %}
            {% block content %}
                <p>I am the second <b>centered</b> container !</p>
            {% endblock %}
        {% endembed %}

        {% embed "@components/container/base.html.twig" with {
            classes: "border bg-secondary-100 p-5",
        } %}
            {% block content %}
                <p>👁️👁️ See the difference now ? 🧑‍🦯</p>
            {% endblock %}
        {% endembed %}
    </div>
</div>
{% endblock %}