{% macro item(params) %}
    {% set text = params.text|default('') %}
    {% set route = params.route|default('#') %}
    {% set iconClass = params.icon|default('') %}
    <a href="{{ route }}">
        <li class="flex sub-nav-item py-2 px-4 hover:cursor-pointer transition duration-300 hover:bg-primary-50	">
            <div class="w-7">
                <i class="fa-solid {{ iconClass }}"></i>
            </div>
            <span>{{ text }}</span>
        </li>
    </a>
{% endmacro %}