{% set data = data ?? [] %}
{% set icon = icon ?? null %}
{% set name = name ?? null %}
{% set toggle = toggle is defined ? toggle : true %}

{% for item in data %}
    {% embed "@components/accordion/item/index.html.twig" with {
        icon,
        name,
} %}
    {% block title %}
        {{ item.title | raw }}
    {% endblock %}
    {% block description %}
        {{ item.description | raw }}
    {% endblock %}
{% endembed %}
{% endfor %}


<script type="text/javascript">
    let checkboxes = document.querySelectorAll('input[name="{{ name }}"]');
    // Loop through checkboxes and add event listeners
    // to deselect all other checkboxes when one is selected
    checkboxes.forEach(function(checkbox) {
        {% if not toggle %}
            break;
        {% endif %}
        checkbox.addEventListener('change', function() {
            if (this.checked) {
                checkboxes.forEach(function(otherCheckbox) {
                    if (otherCheckbox !== checkbox) {
                        otherCheckbox.checked = false;
                    }
                });
            }
        });
    });
</script>