{% use 'form_div_layout.html.twig' %}
{% use 'tailwind_2_layout.html.twig' %}

{% block form_row %}
    {%- set row_attr = {
        class: 'flex flex-col mb-3 text-sm '  ~ (attr.class|default('')),
    } -%}
    {{- parent() -}}
{% endblock %}

{% block form_errors %}
    {% set error_item_class = 'text-danger-400 text-xs' %}
    {{- parent() -}}
{% endblock %}

{% block form_help %}
    {% set help_class = 'mt-1 text-secondary-500 text-xs' %}
    {{- parent() -}}
{% endblock %}

{% block form_label %}
    <div class="flex flex-row mb-1">
        {{- parent() -}}
        {% if label is not same as(false) and required %}
            <span class="text-xs ml-1">*</span>
        {% endif %}
    </div>
{% endblock %}

{% block text_widget %}
    {% set withError = attr.with_error|default(false) %}
    {% set borderClasses = (withError or errors|length > 0) ? 'border-danger-400' : '' %}
    {% set classes = 'w-full border px-4 py-2 rounded-md w-full text-sm outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 focus:ring-opacity-50 ' ~ borderClasses %}
    {%- set attr = attr|merge({
        class: classes
    }) -%}
    {{- block('form_widget') -}}
    {% set errorText = attr.error_text|default('') %}
    {% if errorText %}
        <p class="text-danger-400 text-xs">{{ errorText }}</p>
    {% endif %}
{% endblock %}

{% block integer_widget %}
