{% extends "@base/base.html.twig" %}

{% block content %}
    <body class="hidden text-secondary-700">
    {% block navbar %}
        {% include "@components/navigation/bar/index.html.twig" %}
    {% endblock %}

    <div id="menu_body-wrapper" class="flex">
        {% block menu %}
            {% include "@components/navigation/menu/index.html.twig" %}
        {% endblock %}
        <div id="content" class="flex-1">
            {# Rendering any flash messages #}
            {% include "@components/flash/index.html.twig" %}
            {% block body %}{% endblock %}
        </div>
    </div>
    <script>
        // only show body when all html are loaded
        document.querySelector('body').classList.remove('hidden');
        const theme = localStorage.getItem('theme');
        if (theme) {
            document.querySelector('body').classList.add(theme);
        }
    </script>
    </body>
{% endblock %}
