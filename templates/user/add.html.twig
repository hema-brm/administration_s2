{% extends 'base.html.twig' %}

{% block title %}Add User{% endblock %}

{% block body %}
<style>
    body {
        background-color: #1E90FF;
        padding-top: 80px;
        padding-bottom: 150px;
    }
</style>

<div class="flex justify-center items-center h-screen">
    <div class="w-full max-w-md bg-gray-100 p-4 rounded-md mx-auto">
        <h1 class="text-2xl font-bold mb-6 text-center">Ajouter un Employé</h1>

        {{ form_start(form) }}
            {{ form_row(form.firstName, {
                'label': 'Nom',
                'attr': {
                    'class': 'border p-3 rounded-md w-full text-sm mb-3',
                    'placeholder': "Entrez le nom de l'Employé"
                }
            }) }}

            {{ form_row(form.lastName, {
                'label': 'Prénom',
                'attr': {
                    'class': 'border p-3 rounded-md w-full text-sm mb-3' ,
                    'placeholder': "Entrez le prénom de l'Employé"
                }
            }) }}

            {{ form_row(form.email, {
                'label': 'Email',
                'attr': {
                    'class': 'border p-3 rounded-md w-full text-sm mb-3',
                    'placeholder': "Entrez l'adresse mail de l'Employé"
                }
            }) }}

            {{ form_row(form.password, {
                'label': 'Password',
                'attr': {
                    'class': 'border p-3 rounded-md w-full text-sm mb-3',
                    'placeholder': 'Entrez un mot de passe'
                }
            }) }}

            {{ form_row(form.roles, {
                'label': 'Roles',
                'attr': {
                    'class': 'border p-3 rounded-md w-full text-sm mb-3',
                    'placeholder': "Choisissez le role de l'Employé"
                }
            }) }}

            {{ form_row(form.entreprise, {
                'label': 'Entreprise',
                'attr': {
                    'class': 'border p-3 rounded-md w-full text-sm mb-3',
                    'placeholder': ''
                }
            }) }}

            <div class="flex justify-center mt-4">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold items-center p-3 rounded">Ajouter</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
